            <TextView
                style="@style/SeeAll"
                android:layout_marginStart="245dp"
                android:layout_marginTop="16dp"
                app:layout_constraintStart_toEndOf="@id/meal_plans"
                app:layout_constraintTop_toBottomOf="@id/line3" />

            <ImageView
                android:id="@+id/greek_salad"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="22dp"
                android:src="@drawable/salad1"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/meal_plans" />

            <TextView
                android:id="@+id/greek_salad_text"
                style="@style/category_text"
                android:layout_marginStart="22dp"
                android:layout_marginTop="15dp"
                android:text="@string/greek_salad"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/greek_salad" />

            <TextView
                android:id="@+id/kcal_150_text"
                style="@style/PopularExerciseText"
                android:layout_marginTop="5dp"
                android:text="@string/kcal_150"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/greek_salad_text" />

            <ImageView
                android:id="@+id/line4"
                android:layout_width="370dp"
                android:layout_height="20dp"
                android:src="@drawable/line"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/kcal_150_text" />

            <ImageView
                android:id="@+id/fresh_salad"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:src="@drawable/salad2"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/line4" />

            <TextView
                android:id="@+id/fresh_salad_text"
                style="@style/category_text"
                android:layout_marginStart="22dp"
                android:layout_marginTop="15dp"
                android:text="@string/salad_fresh"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/fresh_salad" />

            <TextView
                android:id="@+id/kcal_270_text"
                style="@style/PopularExerciseText"
                android:layout_marginTop="5dp"
                android:text="@string/kcal_270"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/fresh_salad_text" />

            <ImageView
                android:id="@+id/line5"
                android:layout_width="370dp"
                android:layout_height="20dp"
                android:src="@drawable/line"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/kcal_270_text" />
            <!--        meal plans-->

            <!--        additional exercises-->
            <TextView
                android:id="@+id/additional_exercises"
                style="@style/TitleContent"
                android:layout_marginTop="14dp"
                android:text="@string/additional_exercise"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/line5" />

            <TextView
                style="@style/SeeAll"
                android:layout_below="@id/line5"
                android:layout_marginStart="189dp"
                android:layout_marginTop="16dp"
                app:layout_constraintStart_toEndOf="@id/additional_exercises"
                app:layout_constraintTop_toBottomOf="@id/line5" />

            <!--        jumping rope    -->
            <ImageView
                android:id="@+id/yellow_background"
                style="@style/AdditionalExercisesBg"
                android:layout_marginTop="14dp"
                android:src="@drawable/yellow_bg"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/additional_exercises" />

            <ImageView
                android:id="@+id/jumping_img"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="22dp"
                android:layout_marginTop="14dp"
                android:src="@drawable/jumping"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/additional_exercises" />

            <TextView
                android:id="@+id/jumping_rope_text"
                style="@style/category_text"
                android:layout_below="@id/additional_exercises"
                android:layout_marginStart="15dp"
                android:layout_marginTop="17dp"
                android:text="@string/jumping_rope"
                app:layout_constraintStart_toEndOf="@id/yellow_background"
                app:layout_constraintTop_toBottomOf="@id/additional_exercises" />

            <ImageView
                android:id="@+id/calories1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="15dp"
                android:layout_marginTop="12dp"
                android:src="@drawable/calories"
                app:layout_constraintStart_toEndOf="@id/yellow_background"
                app:layout_constraintTop_toBottomOf="@id/jumping_rope_text" />

            <TextView
                android:id="@+id/kcal_110_text"
                style="@style/PopularExerciseText"
                android:layout_marginStart="6dp"
                android:layout_marginTop="10dp"
                android:text="@string/kcal_110"
                app:layout_constraintStart_toEndOf="@id/calories1"
                app:layout_constraintTop_toBottomOf="@id/jumping_rope_text" />

            <ImageView
                android:id="@+id/vertical_line3"
                android:layout_width="2dp"
                android:layout_height="12dp"
                android:layout_marginStart="11dp"
                android:layout_marginTop="11dp"
                android:src="@drawable/vertical_line"
                app:layout_constraintStart_toEndOf="@id/kcal_110_text"
                app:layout_constraintTop_toBottomOf="@id/jumping_rope_text" />

