                android:text="@string/beginner"
                app:layout_constraintStart_toEndOf="@id/yellow_background"
                app:layout_constraintTop_toBottomOf="@id/calories1" />

            <ImageView
                android:id="@+id/line6"
                android:layout_width="370dp"
                android:layout_height="20dp"
                android:layout_marginTop="14dp"
                android:src="@drawable/line"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/yellow_background" />
            <!--       jumping rope    -->

            <!--       holding jumping rope-->
            <ImageView
                android:id="@+id/blue_background"
                style="@style/AdditionalExercisesBg"
                android:layout_marginTop="18dp"
                android:src="@drawable/blue_bg"
