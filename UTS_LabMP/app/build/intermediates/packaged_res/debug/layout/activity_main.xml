<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="38dp">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <!--        header-->
            <ImageView
                android:id="@+id/sophia_pic"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginTop="57dp"
                android:src="@drawable/sophia_img"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <ImageView
                android:id="@+id/notif_bell"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="310dp"
                android:layout_marginTop="59dp"
                android:src="@drawable/notification_icon"
                app:layout_constraintStart_toEndOf="@id/sophia_pic"
                app:layout_constraintTop_toTopOf="parent" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="-20dp"
                android:src="@drawable/blur_ellipse"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/hello_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginTop="6dp"
                android:fontFamily="@font/montserrat_medium"
                android:text="@string/hello"
                android:textColor="@color/gray_light_2"
                android:textSize="12sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/sophia_pic" />

            <TextView
                android:id="@+id/sophia_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginTop="2dp"
                android:fontFamily="@font/dmsans_medium"
                android:text="@string/sophia"
                android:textColor="@color/black"
                android:textSize="20sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/hello_text" />
            <!--        header-->

            <!--        search bar-->
            <LinearLayout
                android:id="@+id/search_bar"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginHorizontal="20dp"
                android:layout_marginTop="20dp"
                android:background="@drawable/gray_bg"
                android:orientation="horizontal"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/sophia_text">

                <ImageView
                    android:id="@+id/search_icon"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="22dp"
                    android:layout_marginTop="14dp"
                    android:src="@drawable/search" />

                <TextView
                    android:id="@+id/search_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="11dp"
                    android:layout_marginTop="15dp"
                    android:fontFamily="@font/poppins_regular"
                    android:text="@string/search"
                    android:textColor="@color/gray_dark"
                    android:textSize="14sp" />
            </LinearLayout>
            <!--        search bar-->

            <!--        start exercises-->
            <FrameLayout
                android:id="@+id/exercise_section"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/search_bar">

                <ImageView
                    android:id="@+id/orange_bg"
                    android:layout_width="match_parent"
                    android:layout_height="160dp"
                    android:layout_marginTop="50dp"
                    android:paddingHorizontal="33dp"
                    android:src="@drawable/gradient_orange" />

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:id="@+id/girl_stretching_back"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/girlstretchingback"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/search_bar"
                        tools:ignore="NotSibling" />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="184dp"
                        android:layout_marginBottom="8dp"
                        android:src="@drawable/barbel"
                        app:layout_constraintBottom_toBottomOf="@id/girl_stretching_back"
                        app:layout_constraintStart_toStartOf="@id/girl_stretching_back" />

                    <LinearLayout
                        android:id="@+id/exercises_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="-80dp"
                        android:orientation="vertical"
                        app:layout_constraintBottom_toBottomOf="@id/girl_stretching_back"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toEndOf="@id/girl_stretching_back"
                        app:layout_constraintTop_toTopOf="@id/girl_stretching_back">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="10dp"
                            android:fontFamily="@font/bebasneue_regular"
                            android:text="@string/fit_young_woman"
                            android:textColor="@color/white"
                            android:textSize="22sp" />

                        <androidx.appcompat.widget.AppCompatButton
                            android:layout_width="wrap_content"
                            android:layout_height="30dp"
                            android:layout_marginStart="22dp"
                            android:background="@drawable/yellow_bg"
                            android:paddingHorizontal="18dp"
                            android:text="@string/start_exercise"
                            android:textAllCaps="false"
                            android:textColor="@color/white" />

                    </LinearLayout>
                </androidx.constraintlayout.widget.ConstraintLayout>

            </FrameLayout>
            <!--        start exercises-->
            <!--        select your goal-->
            <LinearLayout
                android:id="@+id/goal_section"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                app:layout_constraintTop_toBottomOf="@id/exercise_section">

                <TextView
                    android:id="@+id/set_goal_title"
                    style="@style/TitleContent"
                    android:text="@string/select_your_goal" />

                <HorizontalScrollView
                    android:id="@+id/horizontal_view"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:scrollbars="none">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/goal_item1"
                            style="@style/SelectGoalsText"
                            android:layout_marginStart="20dp"
                            android:layout_marginTop="16dp"
                            android:background="@drawable/gray2_bg"
                            android:paddingHorizontal="10dp"
                            android:paddingVertical="9dp"
                            android:text="@string/loose_weight" />

                        <TextView
                            android:id="@+id/goal_item2"
                            style="@style/SelectGoalsText.Active"
                            android:layout_marginStart="20dp"
                            android:layout_marginTop="16dp"
                            android:background="@drawable/black_bg"
                            android:paddingHorizontal="10dp"
                            android:paddingVertical="9dp"
                            android:text="@string/loose_weight"
                            android:textColor="@color/white" />

                        <TextView
                            android:id="@+id/goal_item3"
                            style="@style/SelectGoalsText"
                            android:layout_marginStart="20dp"
                            android:layout_marginTop="16dp"
                            android:background="@drawable/gray2_bg"
                            android:paddingHorizontal="10dp"
                            android:paddingVertical="9dp"
                            android:text="@string/body_building" />

                        <TextView
                            android:id="@+id/goal_item4"
                            style="@style/SelectGoalsText"
                            android:layout_marginStart="20dp"
                            android:layout_marginTop="16dp"
                            android:layout_marginEnd="20dp"
                            android:background="@drawable/gray2_bg"
                            android:paddingHorizontal="30dp"
                            android:paddingVertical="9dp"
                            android:text="@string/healty" />

                    </LinearLayout>

                </HorizontalScrollView>

            </LinearLayout>
            <!--        select your goal-->

            <!--        category-->
            <LinearLayout
                android:id="@+id/category_section"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                app:layout_constraintTop_toBottomOf="@+id/goal_section">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/category_title"
                        style="@style/TitleContent"
                        android:layout_marginTop="22dp"
                        android:text="@string/category" />

                    <TextView
                        style="@style/SeeAll"
                        android:layout_marginTop="22dp" />

                </LinearLayout>

                <HorizontalScrollView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:scrollbars="none">

                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/rv_category"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"/>

                </HorizontalScrollView>

            </LinearLayout>

            <ImageView
                android:id="@+id/line1"
                android:layout_width="370dp"
                android:layout_height="20dp"
                android:layout_marginTop="10dp"
                android:src="@drawable/line"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/category_section" />
            <!--        category-->

            <!--        popular exercises-->
            <TextView
                android:id="@+id/popular_exercises"
