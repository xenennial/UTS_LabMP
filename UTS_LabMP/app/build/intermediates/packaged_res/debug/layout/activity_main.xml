                app:layout_constraintTop_toBottomOf="@+id/line1" />

            <TextView
                style="@style/SeeAll"
                android:layout_marginStart="207dp"
                android:layout_marginTop="22dp"
                android:layout_toEndOf="@id/popular_exercises"
                app:layout_constraintStart_toEndOf="@id/popular_exercises"
                app:layout_constraintTop_toBottomOf="@+id/line1" />

            <!--        full shot woman-->
            <ImageView
                android:id="@+id/shot_beautiful_girl"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:src="@drawable/shot_beautiful_sporty"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/popular_exercises" />

            <ImageView
