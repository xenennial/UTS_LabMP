                app:layout_constraintTop_toBottomOf="@+id/shot_beautiful_girl" />

            <TextView
                android:id="@+id/beginner_text"
                style="@style/PopularExerciseText"
                android:text="@string/beginner"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/full_shot_text" />

            <ImageView
                android:id="@+id/vertical_line"
                android:layout_width="2dp"
                android:layout_height="12dp"
                android:layout_marginStart="10.5dp"
                android:layout_marginTop="10.5dp"
                android:src="@drawable/vertical_line"
                app:layout_constraintStart_toEndOf="@+id/beginner_text"
                app:layout_constraintTop_toBottomOf="@+id/full_shot_text" />

            <ImageView
                android:id="@+id/clock"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10.5dp"
                android:layout_marginTop="10.5dp"
                android:src="@drawable/clock"
                app:layout_constraintStart_toEndOf="@+id/vertical_line"
                app:layout_constraintTop_toBottomOf="@+id/full_shot_text" />

            <TextView
                style="@style/PopularExerciseText"
                android:layout_marginStart="5.49dp"
                android:text="@string/min_50"
                app:layout_constraintStart_toEndOf="@+id/clock"
                app:layout_constraintTop_toBottomOf="@+id/full_shot_text" />

            <ImageView
                android:id="@+id/line2"
                android:layout_width="370dp"
                android:layout_height="20dp"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="8dp"
                android:src="@drawable/line"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/beginner_text" />
            <!--        full shot woman-->

            <!--        looking shocked girl-->
            <ImageView
                android:id="@+id/looking_shocked_girl"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="10dp"
                android:src="@drawable/looking_shocked"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/line2" />

            <ImageView
                android:id="@+id/white_bg2"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_marginStart="300dp"
                android:layout_marginTop="24dp"
                android:src="@drawable/white_bg"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/line2" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="305.8dp"
                android:layout_marginTop="29.8dp"
                android:src="@drawable/heart_icon"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/line2" />

            <TextView
                android:id="@+id/looking_shocked_text"
                style="@style/category_text"
                android:layout_marginStart="22dp"
                android:text="@string/athlete_practicing"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/looking_shocked_girl" />

            <TextView
                android:id="@+id/beginner_text2"
                style="@style/PopularExerciseText"
                android:text="@string/beginner"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/looking_shocked_text" />

            <ImageView
                android:id="@+id/vertical_line2"
                android:layout_width="2dp"
                android:layout_height="12dp"
                android:layout_marginStart="10.5dp"
                android:layout_marginTop="10.5dp"
                android:src="@drawable/vertical_line"
                app:layout_constraintStart_toEndOf="@+id/beginner_text2"
                app:layout_constraintTop_toBottomOf="@+id/looking_shocked_text" />

            <ImageView
                android:id="@+id/clock2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10.5dp"
                android:layout_marginTop="10.5dp"
                android:src="@drawable/clock"
                app:layout_constraintStart_toEndOf="@+id/vertical_line2"
                app:layout_constraintTop_toBottomOf="@+id/looking_shocked_text" />

            <TextView
                style="@style/PopularExerciseText"
                android:layout_marginStart="5.49dp"
                android:text="@string/min_50"
                app:layout_constraintStart_toEndOf="@+id/clock2"
                app:layout_constraintTop_toBottomOf="@+id/looking_shocked_text" />
